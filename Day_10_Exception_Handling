#Topics-Try-except, specific exceptions, finally clause

#Challenge-Read numbers from a file and handle errors gracefully

def read_numbers_from_file(filename):
    try:
        with open(filename, 'r') as file:
            numbers = []
            for line in file:
                try:
                    number = int(line.strip())
                    numbers.append(number)
                except ValueError:
                    print(f"âš ï¸ Skipping invalid line: {line.strip()}")
            return numbers

    except FileNotFoundError:
        print(f"âŒ Error: File '{filename}' not found.")
        return []

    except IOError:
        print(f"âŒ Error: There was a problem reading the file.")
        return []

    finally:
        print("ğŸ“ File processing completed.")

# ğŸ”„ Replace 'YourName' with your actual username
file_path = r"C:\Users\Lenovo\Downloads\numbers.txt"
result = read_numbers_from_file(file_path)
print("âœ… Numbers read from file:", result)
